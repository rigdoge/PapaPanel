{
    "project": {
        "name": "PapaPanel",
        "description": "基于 Strapi 的 LEMP 环境自动化部署和监控管理平台",
        "version": "2.0.0",
        "author": "TattooMaster",
        "repository": {
            "type": "git",
            "url": "https://github.com/TattooMaster/PapaPanel"
        }
    },
    "architecture": {
        "backend": {
            "cms": {
                "framework": "Strapi",
                "version": "4.20.0",
                "database": "postgres",
                "features": {
                    "auth": true,
                    "api": true,
                    "webhooks": true,
                    "i18n": true
                }
            },
            "models": {
                "server": {
                    "fields": {
                        "hostname": "string",
                        "ip": "string",
                        "ssh_port": "integer",
                        "ssh_key": "text",
                        "status": "enumeration",
                        "server_type": "enumeration",
                        "created_at": "datetime",
                        "updated_at": "datetime"
                    },
                    "relations": {
                        "sites": "hasMany",
                        "monitors": "hasMany"
                    }
                },
                "site": {
                    "fields": {
                        "domain": "string",
                        "php_version": "string",
                        "nginx_config": "json",
                        "ssl_status": "boolean",
                        "created_at": "datetime",
                        "updated_at": "datetime"
                    },
                    "relations": {
                        "server": "belongsTo",
                        "backups": "hasMany"
                    }
                },
                "playbook": {
                    "fields": {
                        "name": "string",
                        "description": "text",
                        "type": "enumeration",
                        "ansible_file": "string",
                        "variables": "json",
                        "created_at": "datetime",
                        "updated_at": "datetime"
                    }
                },
                "monitor": {
                    "fields": {
                        "name": "string",
                        "type": "enumeration",
                        "endpoint": "string",
                        "auth_token": "password",
                        "created_at": "datetime",
                        "updated_at": "datetime"
                    },
                    "relations": {
                        "server": "belongsTo",
                        "alerts": "hasMany"
                    }
                },
                "alert": {
                    "fields": {
                        "name": "string",
                        "severity": "enumeration",
                        "rules": "json",
                        "notification_channel": "json",
                        "created_at": "datetime",
                        "updated_at": "datetime"
                    },
                    "relations": {
                        "monitor": "belongsTo"
                    }
                }
            }
        },
        "automation": {
            "ansible": {
                "version": "2.16.2",
                "playbooks": {
                    "lemp": {
                        "description": "LEMP环境安装",
                        "tasks": [
                            "nginx_install",
                            "mysql_install",
                            "php_install",
                            "security_hardening"
                        ]
                    },
                    "site": {
                        "description": "站点部署",
                        "tasks": [
                            "nginx_config",
                            "ssl_setup",
                            "php_config",
                            "db_create"
                        ]
                    },
                    "backup": {
                        "description": "数据备份",
                        "tasks": [
                            "db_backup",
                            "files_backup",
                            "remote_sync"
                        ]
                    },
                    "monitor": {
                        "description": "监控部署",
                        "tasks": [
                            "prometheus_install",
                            "grafana_install",
                            "loki_install",
                            "exporters_setup"
                        ]
                    }
                },
                "inventory": {
                    "groups": [
                        "web_servers",
                        "db_servers",
                        "monitor_servers"
                    ]
                }
            }
        },
        "monitoring": {
            "prometheus": {
                "version": "2.49.0",
                "exporters": {
                    "node": true,
                    "mysql": true,
                    "nginx": true,
                    "blackbox": true
                },
                "retention": "15d",
                "scrape_interval": "15s"
            },
            "alertmanager": {
                "version": "0.26.0",
                "config": {
                    "global": {
                        "resolve_timeout": "5m",
                        "smtp_smarthost": "smtp.example.com:587",
                        "smtp_from": "alertmanager@example.com"
                    },
                    "route": {
                        "group_by": ["alertname", "cluster", "service"],
                        "group_wait": "30s",
                        "group_interval": "5m",
                        "repeat_interval": "4h",
                        "receiver": "default-receiver",
                        "routes": [
                            {
                                "match": {
                                    "severity": "critical"
                                },
                                "receiver": "critical-receiver",
                                "repeat_interval": "30m"
                            },
                            {
                                "match": {
                                    "severity": "warning"
                                },
                                "receiver": "warning-receiver",
                                "repeat_interval": "2h"
                            }
                        ]
                    },
                    "receivers": [
                        {
                            "name": "default-receiver",
                            "email_configs": [
                                {
                                    "to": "admin@example.com"
                                }
                            ]
                        },
                        {
                            "name": "critical-receiver",
                            "email_configs": [
                                {
                                    "to": "admin@example.com"
                                }
                            ],
                            "telegram_configs": [
                                {
                                    "bot_token": "${TELEGRAM_BOT_TOKEN}",
                                    "chat_id": "${TELEGRAM_CHAT_ID}",
                                    "parse_mode": "HTML"
                                }
                            ],
                            "webhook_configs": [
                                {
                                    "url": "https://oapi.dingtalk.com/robot/send?access_token=${DINGTALK_TOKEN}",
                                    "http_config": {
                                        "bearer_token": "${DINGTALK_SECRET}"
                                    }
                                }
                            ]
                        },
                        {
                            "name": "warning-receiver",
                            "telegram_configs": [
                                {
                                    "bot_token": "${TELEGRAM_BOT_TOKEN}",
                                    "chat_id": "${TELEGRAM_CHAT_ID}",
                                    "parse_mode": "HTML"
                                }
                            ],
                            "webhook_configs": [
                                {
                                    "url": "https://oapi.dingtalk.com/robot/send?access_token=${DINGTALK_TOKEN}",
                                    "http_config": {
                                        "bearer_token": "${DINGTALK_SECRET}"
                                    }
                                }
                            ]
                        }
                    ],
                    "templates": [
                        "/etc/alertmanager/template/*.tmpl"
                    ],
                    "inhibit_rules": [
                        {
                            "source_match": {
                                "severity": "critical"
                            },
                            "target_match": {
                                "severity": "warning"
                            },
                            "equal": ["alertname", "cluster", "service"]
                        }
                    ]
                },
                "templates": {
                    "default.tmpl": {
                        "telegram": "{{ define \"telegram.default\" }}\n<b>[{{ .Status | toUpper }}] {{ .AlertName }}</b>\n告警级别: {{ .Labels.severity }}\n时间: {{ .StartsAt }}\n实例: {{ .Labels.instance }}\n详情: {{ .Annotations.description }}{{ end }}",
                        "email": "{{ define \"email.default\" }}\n告警名称: {{ .AlertName }}\n告警级别: {{ .Labels.severity }}\n告警时间: {{ .StartsAt }}\n实例: {{ .Labels.instance }}\n详情: {{ .Annotations.description }}{{ end }}",
                        "dingtalk": "{{ define \"dingtalk.default\" }}\n### [{{ .Status | toUpper }}] {{ .AlertName }}\n- 告警级别: {{ .Labels.severity }}\n- 时间: {{ .StartsAt }}\n- 实例: {{ .Labels.instance }}\n- 详情: {{ .Annotations.description }}{{ end }}"
                    }
                }
            },
            "grafana": {
                "version": "10.2.3",
                "features": {
                    "alerting": true,
                    "logs": true,
                    "dashboards": true
                },
                "datasources": [
                    "prometheus",
                    "loki"
                ]
            },
            "loki": {
                "version": "2.9.0",
                "retention": "7d",
                "features": {
                    "alerts": true,
                    "rules": true
                }
            }
        },
        "deployment": {
            "docker": {
                "enabled": true,
                "compose": true
            },
            "ports": {
                "strapi": 1337,
                "prometheus": 9090,
                "alertmanager": 9093,
                "grafana": 3000,
                "loki": 3100,
                "node_exporter": 9100,
                "mysql_exporter": 9104,
                "nginx_exporter": 9113,
                "blackbox_exporter": 9115
            }
        }
    },
    "development": {
        "node": ">=18.0.0",
        "postgres": ">=15.0",
        "docker": ">=24.0.0",
        "ansible": ">=2.16.0"
    }
} 