{
    "authentication": {
        "provider": "authProvider",
        "loginPage": true,
        "forgotPassword": true,
        "permissions": {
            "enabled": true,
            "rbac": true
        },
        "security": {
            "jwt": {
                "enabled": true,
                "expiresIn": "8h",
                "refreshToken": true
            },
            "mfa": {
                "enabled": true,
                "methods": ["totp", "backup-codes"],
                "required": ["admin", "devops"]
            },
            "passwordPolicy": {
                "minLength": 12,
                "requireNumbers": true,
                "requireSymbols": true,
                "requireLowercase": true,
                "requireUppercase": true,
                "preventReuse": 5
            },
            "session": {
                "timeout": 3600,
                "maxConcurrent": 3,
                "rememberMe": true
            },
            "rateLimit": {
                "enabled": true,
                "maxAttempts": 5,
                "windowMs": 900000
            }
        }
    },
    "authorization": {
        "roles": {
            "admin": {
                "description": "Full system access",
                "permissions": ["*"]
            },
            "devops": {
                "description": "DevOps team",
                "permissions": [
                    "deployment:*",
                    "monitoring:*",
                    "backup:*",
                    "services:*"
                ]
            },
            "developer": {
                "description": "Developer access",
                "permissions": [
                    "deployment:read",
                    "monitoring:read",
                    "services:read"
                ]
            },
            "viewer": {
                "description": "Read-only access",
                "permissions": [
                    "*:read"
                ]
            }
        },
        "resources": {
            "deployment": {
                "actions": ["create", "read", "update", "delete", "execute"],
                "attributes": ["environment", "service"]
            },
            "monitoring": {
                "actions": ["read", "update", "acknowledge"],
                "attributes": ["service", "severity"]
            },
            "services": {
                "actions": ["start", "stop", "restart", "read", "update"],
                "attributes": ["type", "environment"]
            }
        }
    },
    "audit": {
        "enabled": true,
        "events": {
            "auth": [
                "login",
                "logout",
                "password_change",
                "mfa_change"
            ],
            "system": [
                "deployment",
                "configuration_change",
                "service_restart"
            ],
            "security": [
                "permission_change",
                "role_change",
                "user_create"
            ]
        },
        "retention": {
            "duration": "90d",
            "storage": {
                "type": "database",
                "compression": true
            }
        }
    }
} 