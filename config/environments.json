{
    "enabled": true,
    "types": {
        "development": {
            "debug": true,
            "monitoring": {
                "interval": "30s",
                "retention": "7d"
            },
            "backup": {
                "enabled": true,
                "frequency": "daily"
            }
        },
        "staging": {
            "debug": false,
            "monitoring": {
                "interval": "15s",
                "retention": "14d"
            },
            "backup": {
                "enabled": true,
                "frequency": "daily"
            }
        },
        "production": {
            "debug": false,
            "monitoring": {
                "interval": "10s",
                "retention": "30d"
            },
            "backup": {
                "enabled": true,
                "frequency": "hourly"
            }
        }
    },
    "deployment": {
        "strategy": {
            "type": "rolling",
            "maxUnavailable": 1,
            "healthCheck": {
                "enabled": true,
                "path": "/health",
                "interval": "10s",
                "timeout": "5s",
                "retries": 3
            }
        },
        "automation": {
            "enabled": true,
            "triggers": ["git-push", "schedule", "manual"],
            "approval": {
                "required": true,
                "roles": ["admin", "devops"]
            }
        },
        "rollback": {
            "enabled": true,
            "automatic": true,
            "triggers": {
                "errorRate": 0.05,
                "responseTime": 2000,
                "healthCheck": "failing"
            }
        }
    }
} 